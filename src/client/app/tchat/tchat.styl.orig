  }

  .board {
    flex: 1;
    width: 100%;
    margin-bottom: 0.25em;
    padding: 0.25em;
    position: relative;

    @media screen and (max-width: $responsive-small-break) {
      border-right: 0;
      border-left: 0;
      border-radius: 0;
      margin-bottom: 0;
    }

    .clip {
      overflow: auto;
      position: absolute;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
    }

    .message-data {
      display: flex;
      flex-direction: row;
      margin-bottom: 0.25em;
      min-height: 1em;

      .nickname {
        min-width: 100px;
        max-width: 20%;
        text-align: right;
        padding: 0.25em;
        border-radius: 0.5em;
        margin-right: 0.25em;
      }

      .message {
        padding: 0.25em;
        border-radius: 0.5em;
        flex: 1;
      }

    }

    .message-data:nth-child(odd) {
      $$bg-color = lighten($secondary-color, 70%);

      .nickname {
        background-color: $$bg-color;
      }

      .message {
        background-color: $$bg-color;
      }
    }

    .message-data:nth-child(even) {
      $$bg-color = lighten($primary-color, 70%);

      .nickname {
        background-color: $$bg-color;
      }

      .message {
        background-color: $$bg-color;
      }
    }
  }

  footer {
    display: flex;
    flex-direction: row;
    width: 100%;

    input.message {
      margin-right: 0.25em;
      flex: 1;
    }
  }

}
