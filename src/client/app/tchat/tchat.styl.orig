@import '../app.theme.color';
@import '../app.theme.responsive';

form.tchat {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-wrap: wrap;

  width: 70%;

  @media screen and (max-width: $responsive-medium-break) {
    width: 90%;
  }

  @media screen and (max-width: $responsive-small-break) {
    width: 100%;
  }

  header {
    display: flex;
    flex-direction: row;
    margin-bottom: 0.25em;
    width: 100%;

    @media screen and (max-width: $responsive-small-break) {
      margin-bottom: 0;
    }

    .nickname {
      flex: 1;
    }
  }

  .video-board {
    width: 100%;
    background-color: $primary-background-color;
