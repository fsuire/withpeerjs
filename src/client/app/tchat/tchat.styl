@import '../app.theme.color';
@import '../app.theme.responsive';

form.tchat {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;

  width: 70%;

  @media screen and (max-width: $responsive-medium-break) {
    width: 90%;
  }

  @media screen and (max-width: $responsive-small-break) {
    width: 100%;
  }

  input.nickname {
    width: 100%;
    margin-bottom: 0.5em;

    @media screen and (max-width: $responsive-small-break) {
      margin-bottom: 0;
    }
  }

  .board {
    width: 100%;
    min-height: 200px;
    max-height: 50vh;
    border: 1px solid $title-primary-color;
    border-radius: 0.5em;
    margin-bottom: 0.5em;
    padding: 0.25em;
    overflow: auto;

    @media screen and (max-width: $responsive-small-break) {
      border-right: 0;
      border-left: 0;
      border-radius: 0;
      margin-bottom: 0;
    }

    .message-data {
      display: flex;
      flex-direction: row;

      .nickname {
        min-width: 100px;
        max-width: 20%;
      }

    }
  }

  input.message {
    flex: 1;
  }

}
