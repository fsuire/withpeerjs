@import '../../app.theme.color';
@import '../../app.theme.responsive';
@import '../../blocks/layout/button.mixin';

[route="tchat.room"] {
  display: flex;
  flex-direction: row;
  
  @media screen and (max-width: $responsive-small-break) {
    display: column;
  }

  .informations {
    display: flex;
    flex-direction: column;
    min-width: 230px;

    .peer-list {
      padding: 0;
      
      ul > li {
        border-bottom: 1px solid $primary-background-color;

        &:last-child {
          border-bottom: none;
        }

        > div {
          padding: 0.5em;
          display: flex;
          flex-direction: row;
          
          transition-property: background-color, border-color, color;
          transition-duration: 100ms;
          transition-timing-function: ease-out;

          &:hover {
            background-color: $primary-background-color;
          }
          
          > span {
            flex: 1;
          }
          
          button.icon-comment-alt {
            standard-button();
            border: 1px solid darken($primary-background-color, 10%);
            
            &:hover {
              background-color: $secondary-font-color;
              border-color: darken($secondary-font-color, 30%);
              color: darken($secondary-font-color, 30%);
            }
            
          }
          
        }
      }
    }
  }
  

  .rooms {
    padding-left: 1em;

    tchat-room {
      display: block;
      
      @keyframes vanishing {
        from {
          transform: scaleY(1);
        }
        to {
          transform: scaleY(0);
        }
      }
      
      &.vanishing {
        animation-duration: 300ms;
        animation-name: vanishing;
      }
      
      
      /*transform: scaleY(1);
      transition-property: transform;
      transition-duration: 300ms;
      transition-timing-function: ease-out;
      
      &.vanishing {
        transform: scaleY(0);
      }*/
    
      > box {

        > section {
          resize: both;
          min-width: 400px;
          max-height: 400px;
          overflow: auto;

          > .message {
            display: flex;
            flex-direction: row;
            padding: 0.5em;
            border-bottom: 1px solid darken($primary-background-color, 25%);
            flex-shrink: 0;

            &:last-child {
              border-bottom: 0;
            }
            
            &.locally-sent {
              .nickname {
                order: 2;
                margin-right: 0em;
              
                span {
                  background-color: lighten($primary-color, 30%);
                }
              }
              
              .message {
                order: 1;
                margin-right: 1em;
              }
            }

            .nickname {
              display: flex;
              flex-direction: column;
              
              max-width: 20%;
              min-width: 20%;
              flex-shrink: 0;
              font-weight: bold;
              margin-right: 1em;
              margin-left: 0em;
              
              span {
                margin-left: auto;
                margin-right: auto;
                background-color: lighten($secondary-color, 30%);
                border-radius: 3em;
                padding: 1em;
              }
            }

            .message {
              flex: 1;
              display: flex;
              
              padding: 1em;
              margin-right: 0em;
              margin-left: 0em;
            }
          }
        }
        
        > footer {
          justify-content: flex-end;
        }
        
      }
    }
  }
}
