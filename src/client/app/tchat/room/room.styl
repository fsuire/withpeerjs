@import '../../app.theme.color';
@import '../../app.theme.responsive';

[route="tchat.room"] {
  display: flex;
  flex-direction: row;
  
  @media screen and (max-width: $responsive-small-break) {
    display: column;
  }

  .informations {
    display: flex;
    flex-direction: column;
    min-width: 230px;

    .peer-list > li {
      margin-bottom: 0.5em;

      > div {

        border: 1px solid $primary-background-color;
        padding: 0.5em;

        &:hover {
          cursor: pointer;
          border: 1px solid darken($primary-background-color, 40%);
        }
      }

      &:last-child {
        margin-bottom: 0;
      }

    }
  }

  .rooms {
    padding-left: 1em;

    tchat-room {
      > .box {

        > section {
          resize: both;
          min-width: 400px;
          max-height: 400px;
          overflow: auto;

          > .message {
            display: flex;
            flex-direction: row;
            padding: 0.5em;
            border-bottom: 1px solid darken($primary-background-color, 25%);
            flex-shrink: 0;

            &:last-child {
              border-bottom: 0;
            }
            
            &.locally-sent {
              .nickname {
                order: 2;
                margin-right: 0em;
              
                span {
                  background-color: lighten($primary-color, 30%);
                }
              }
              
              .message {
                order: 1;
                margin-right: 1em;
              }
            }

            .nickname {
              display: flex;
              flex-direction: column;
              
              max-width: 20%;
              min-width: 20%;
              flex-shrink: 0;
              font-weight: bold;
              margin-right: 1em;
              margin-left: 0em;
              
              span {
                margin-left: auto;
                margin-right: auto;
                background-color: lighten($secondary-color, 30%);
                border-radius: 3em;
                padding: 1em;
              }
            }

            .message {
              flex: 1;
              display: flex;
              
              padding: 1em;
              margin-right: 0em;
              margin-left: 0em;
            }
          }
        }
      }
    }
  }
}
