@import './app.theme.color';
@import './app.theme.responsive';

html {
  height: 100%;
}

body {
  min-height: 100%;
  background: linear-gradient(to bottom, $primary-background-color 0%,alpha($primary-background-color,0) 100px,alpha($primary-background-color,0) 100%) no-repeat;
  font-family: Oxygen, sans-serif;
  color: $primary-font-color;
}

h1 {
  font-size: 3rem;
  color: $primary-color;
  margin-bottom: 0.25em;

  @media screen and (max-width: $responsive-small-break) {
    margin: 0;
  }
}

strong {
  font-weight: bold;
}

div.content {
  height: 100vh;
  width: 100vw;
  position: relative;

  @media screen and (max-width: $responsive-small-break) {
    padding: 0;
  }
  
  > ui-view {
    display: flex;
    overflow: hidden;
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
  }
  
}
