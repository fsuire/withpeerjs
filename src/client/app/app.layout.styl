@import './app.theme.color';
@import './app.theme.responsive';

html {
  height: 100%;
}

body {
  min-height: 100%;
  background: linear-gradient(to bottom, $background-primary-color 0%,alpha($background-primary-color,0) 100px,alpha($background-primary-color,0) 100%) no-repeat;
  font-family: Oxygen, sans-serif;
}

h1 {
  font-size: 3rem;
  color: $title-primary-color;
  margin-bottom: 0.5em;

  @media screen and (max-width: $responsive-small-break) {
    margin: 0;
  }
}

div.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 1em;

  @media screen and (max-width: $responsive-small-break) {
    padding: 0;
  }
}
